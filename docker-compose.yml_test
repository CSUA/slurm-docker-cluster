version: "2.2"

services:
  mysql_test:
    image: mysql:5.7
    hostname: mysql_test
    container_name: mysql_test
        networks:
      - slurmdockercluster_test
    environment:
      - MYSQL_PASSWORD
      MYSQL_RANDOM_ROOT_PASSWORD: "yes"
      MYSQL_DATABASE: slurm_acct_db
      MYSQL_USER: slurm
    volumes:
      - var_lib_mysql_test:/var/lib/mysql

  slurmdbd_test:
    image: slurm-docker-cluster-ubuntu_test
    command: ["slurmdbd"]
    container_name: slurmdbd_test
    hostname: slurmdbd_test
    networks:
      - slurmdockercluster_test
    volumes:
      - etc_munge_test:/etc/munge
#      - etc_slurm_test/etc/slurm
      - var_log_slurm_test:/var/log/slurm
    expose:
      - "6819"
    depends_on:
      - mysql_test

  slurmctld_test:
    image: slurm-docker-cluster-ubuntu_test
    command: ["slurmctld"]
    container_name: slurmctld_test
    hostname: slurmctld_test
    cpuset: "0,1,2,3"
    mem_limit: 16g
    memswap_limit: 17g
    mem_reservation: 512m
    networks:
      - slurmdockercluster_test
    devices:
      - /dev/nvidia1
    volumes:
      - etc_munge_test/etc/munge
        #- etc_slurm_test/etc/slurm
      - slurm_jobdir_test/data
      - var_log_slurm_test/var/log/slurm
      - /home:/home
      - /datasets:/datasets
    expose:
      - "6817"
    ports:
      - "22222:22/tcp"
    depends_on:
      - "slurmdbd_test"

  c_test1:
